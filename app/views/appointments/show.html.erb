<h1><%= @appointment.patient_name %></h1>

<p><%= @appointment.issue %></p>

<ul>
  <li><%= link_to "Edit", edit_appointment_path(@appointment) %></li>
    <li><%= link_to "Destroy", appointment_path(@appointment), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></li>
</ul>


<h2>Comments</h2>
<%= render @appointment.comments %>


<h2>Add comment</h2>
<%= form_with model: [ @appointment, @appointment.comments.build ] do |form| %>
  <p>
    <%= form.label :commenter  %><br>
    <%= form.text_field :commenter  %>
  </p>
  <p>
    <%= form.label :body  %><br>
    <%= form.text_area :body  %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

<div>
  <a href="/">Home</a>
</div>


